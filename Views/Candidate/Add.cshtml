@model AT2_CS_MVC.Models.Display

<fieldset>

    @using (Html.BeginForm())
    {

        @Html.ValidationSummary()
        //new Post { Id = 1, newsContents = "Russian - USA", Title = " XXXX 1", publishedBy = "Jose", publishedOn = Convert.ToDateTime("2024-12-01"), publishedContry = "Thailand" },
        <table class="table table-striped">
            <tr><td>@Html.LabelFor(m => m.name)</td> <td>@Html.EditorFor(m => m.name)@Html.ValidationMessageFor(m => m.name)</td></tr>
            <tr><td>@Html.LabelFor(m => m.dob)</td> <td>@Html.EditorFor(m => m.dob)</td></tr>
            <tr><td>@Html.LabelFor(m => m.gpa)</td> <td> @Html.TextBoxFor(m => m.gpa, new {type = "number", step = "0.01", min = "3.0", max = "4.0" })@Html.ValidationMessageFor(m => m.gpa)</td></tr>
           
            <tr><td>@Html.LabelFor(m => m.university)</td> <td>@Html.EditorFor(m => m.university)@Html.ValidationMessageFor(m => m.university)</td></tr>
            <tr>
                <td>@Html.LabelFor(m => m.Qname)</td>
                <td>@Html.DropDownListFor(m => m.Qname, Model.ListQualification, "Select Qualification", new { IDataTokensMetadata = "ddID" })@Html.ValidationMessageFor(m => m.Qname)</td>
            </tr>

            <tr><td></td><td><button type="submit">ADD</button></td></tr>
        </table>
    }


</fieldset>